{
  "name": "@ben-ryder/jigsaw",
  "description": "A design system and component libraries for use in my personal projects.",
  "version": "0.8.0",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ben-Ryder/jigsaw.git"
  },
  "bugs": {
    "url": "https://github.com/Ben-Ryder/jigsaw/issues"
  },
  "scripts": {
    "start": "concurrently 'npm:start:*'",
    "start:stencil": "stencil build --watch",
    "start:storybook": "storybook dev -p 6006",
    "build": "concurrently 'npm:build:*'",
    "build:stencil": "stencil build --docs",
    "build:storybook": "storybook build",
    "test": "concurrently 'npm:test:*'",
    "test:stencil": "stencil test --spec --e2e",
    "stencil:test-watch": "stencil test --spec --e2e --watchAll",
    "stencil:generate": "stencil generate"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/jigsaw/jigsaw.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "dependencies": {
    "@stencil/core": "^2.13.0",
    "@stencil/react-output-target": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@storybook/addon-actions": "^7.0.0-beta.6",
    "@storybook/addon-essentials": "^7.0.0-beta.6",
    "@storybook/addon-links": "^7.0.0-beta.6",
    "@storybook/html": "^7.0.0-beta.6",
    "@storybook/html-webpack5": "^7.0.0-beta.6",
    "@types/jest": "^27.0.3",
    "babel-loader": "^8.3.0",
    "concurrently": "^7.6.0",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "puppeteer": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.0-beta.6"
  }
}
