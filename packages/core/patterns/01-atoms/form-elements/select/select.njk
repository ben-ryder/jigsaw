<label for="demo-select" class="j-label">This is a select element</label>
<select
        id="demo-select"
        class="j-select{% if modifier %} j-select--{{ modifier }}{% endif %}"
>
    {% for option in options %}
        <option value="{{ option.value }}">{{ option.name }}</option>
    {% endfor %}
</select>
{% if error %}
    <p class="j-error-text">{{ error }}</p>
{% endif %}