{
  "name": "@ben-ryder/jigsaw",
  "version": "0.26.0",
  "description": "A design system and component library for use in my personal projects.",
  "author": "ben-ryder",
  "license": "AGPL-3.0-only",
  "homepage": "https://github.com/ben-ryder/jigsaw#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ben-ryder/jigsaw.git"
  },
  "bugs": {
    "url": "https://github.com/ben-ryder/jigsaw/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "scripts": {
    "build": "rimraf ./public && npm run build:public && npm run build:css",
    "build:public": "cp -r ../react/public ./public",
    "build:css": "lightningcss --minify --bundle ../react/src/jigsaw.css -o ./public/css/jigsaw.css"
  },
  "devDependencies": {
    "lightningcss-cli": "^1.29.3",
    "rimraf": "^6.0.1"
  }
}
