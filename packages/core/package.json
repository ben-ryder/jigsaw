{
  "name": "@ben-ryder/jigsaw",
  "version": "0.10.0",
  "description": "A design system and component library for use in my personal projects.",
  "author": "Ben-Ryder",
  "license": "AGPL-3.0-only",
  "homepage": "https://github.com/Ben-Ryder/jigsaw#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ben-Ryder/jigsaw.git"
  },
  "bugs": {
    "url": "https://github.com/Ben-Ryder/jigsaw/issues"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:prepare && npm run build:styles",
    "build:clean": "rimraf ./fonts ./scss ./css",
    "build:prepare": "gulp && rm scss/development.scss",
    "build:styles": "sass ./scss/main.scss ./css/jigsaw.css"
  },
  "files": [
    "scss",
    "css",
    "fonts",
    "README.md",
    "LICENSE.txt"
  ],
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "rimraf": "^4.1.2",
    "sass": "^1.57.1"
  }
}
