{
  "name": "@ben-ryder/jigsaw",
  "version": "0.9.0",
  "description": "A design system and component library for use in my personal projects.",
  "author": "Ben-Ryder",
  "license": "AGPL-3.0-only",
  "homepage": "https://github.com/Ben-Ryder/jigsaw#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ben-Ryder/jigsaw.git"
  },
  "bugs": {
    "url": "https://github.com/Ben-Ryder/jigsaw/issues"
  },
  "scripts": {
    "start": "npm run build:assets && concurrently 'npm:start:*'",
    "start:fractal": "fractal start --sync --watch",
    "start:sass": "sass patterns/main.scss:dist/css/jigsaw.css patterns/development.scss:dist/css/development.css --watch",
    "build": "npm run build:sass && npm run build:fractal && npm run build:assets",
    "build:fractal": "fractal build",
    "build:sass": "sass patterns/main.scss:dist/css/jigsaw.css patterns/development.scss:dist/css/development.css",
    "build:assets": "gulp assets"
  },
  "files": [
    "dist/scss",
    "dist/css/jigsaw.*",
    "dist/fonts",
    "patterns/toolkit.scss",
    "patterns/**/*.toolkit.scss",
    "README.md",
    "LICENSE.txt"
  ],
  "devDependencies": {
    "@frctl/fractal": "^1.5.14",
    "@frctl/mandelbrot": "^1.10.2",
    "concurrently": "^7.6.0",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.57.1"
  },
  "dependencies": {
    "@frctl/nunjucks": "^2.0.15"
  }
}
