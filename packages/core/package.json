{
  "name": "@ben-ryder/jigsaw",
  "version": "0.1.0",
  "dependencies": {
    "@frctl/fractal": "^1.5.14",
    "concurrently": "^7.6.0",
    "rimraf": "^3.0.2",
    "sass": "^1.57.1"
  },
  "scripts": {
    "start": "concurrently 'npm:start:*'",
    "start:fractal": "fractal start --sync --watch",
    "start:sass": "sass patterns/main.scss dist/css/jigsaw.css --watch",
    "build": "npm run build:sass && npm run build:fractal",
    "build:fractal": "fractal build",
    "build:sass": "sass patterns/main.scss dist/css/jigsaw.css"
  }
}
