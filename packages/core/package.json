{
  "name": "@ben-ryder/jigsaw",
  "version": "0.10.0",
  "description": "A design system and component library for use in my personal projects.",
  "author": "Ben-Ryder",
  "license": "AGPL-3.0-only",
  "homepage": "https://github.com/Ben-Ryder/jigsaw#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ben-Ryder/jigsaw.git"
  },
  "bugs": {
    "url": "https://github.com/Ben-Ryder/jigsaw/issues"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:styles && npm run build:assets",
    "build:clean": "rimraf ./public",
    "build:styles": "sass ../react/src/jigsaw.scss jigsaw.css",
    "build:assets": "cp -r ../react/public ./"
  },
  "files": [
    "public",
    "jigsaw.css",
    "README.md",
    "LICENSE.txt"
  ],
  "devDependencies": {
    "rimraf": "^4.1.2",
    "sass": "^1.57.1"
  }
}
